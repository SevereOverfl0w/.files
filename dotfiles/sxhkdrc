#
# wm independent hotkeys
#

# terminal emulator
super + Return
	roxterm

# program launcher
super + d
	rofi -show run -matching fuzzy

super + shift + d
	rofi -show drun -matching fuzzy

super + ctrl + d ; {f,u,c,p,b}
	{firefox,uzbl-tabbed,chromium,pavucontrol,blueman-manager}

super + x
	killall -SIGUSR1 dunst; \
	~/.files/bin/fancy_lock -n; \
	killall -SIGUSR2 dunst

super + p
	passmenu

super + alt + s
	teiler

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + alt + m
	mirrorscreen

# function keys
XF86AudioMute
	amixer sset Master toggle

XF86Audio{Lower,Raise}Volume
	amixer set Master 5%{-,+}

{_,shift +}XF86MonBrightness{Down,Up}
	xbacklight {-15,"=10",+15,"=100"}

Print
	maim -s -c 1,0,0,0.6 ~/Pictures/maim-$(date +%F-%T).png
