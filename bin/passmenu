#!/usr/bin/env bash

shopt -s nullglob globstar

typeit=0
if [[ $1 == "--type" ]]; then
	typeit=1
	shift
fi

password=$(gopass list -f | rofi -i -dmenu "$@")

[[ -n $password ]] || exit

if [[ $typeit -eq 0 ]]; then
	out=$(gopass show -c "$password" 2>&1)
	if [[ $? -ne 0 ]]; then
		notify-send "Pass error" "$out"
	fi
else
	gopass show -o "$password" | xdotool type --clearmodifiers --file -
fi
